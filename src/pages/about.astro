  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggleButtons = document.querySelectorAll('[data-toggle]');

      toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
          const jobContent = button.closest('.job-content');
          const hiddenList = jobContent.querySelector('[data-expandable]');

          if (hiddenList) {
            const isExpanded = hiddenList.classList.contains('expanded');

            if (isExpanded) {
              hiddenList.classList.remove('expanded');
              button.classList.remove('expanded');
              button.textContent = 'Show more';
            } else {
              hiddenList.classList.add('expanded');
              button.classList.add('expanded');
              button.textContent = 'Show less';
            }
          }
        });
      });
    });
  </script>
