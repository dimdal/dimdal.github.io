---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Marius Ørvik" description="Get in touch with Marius Ørvik">
  <div class="page-header">
    <h1>Get in Touch</h1>
    <p class="subtitle">Let's discuss product leadership, AI innovation, or new opportunities</p>
  </div>

  <section class="contact-intro">
    <div class="intro-content">
      <p class="lead">
        I'm always interested in connecting with fellow <strong>product leaders</strong>, discussing
        <strong>AI product strategy</strong>, or exploring new opportunities.
      </p>
    </div>
  </section>

  <section class="contact-methods">
    <div class="contact-card">
      <div class="contact-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      </div>
      <h3>Email</h3>
      <p><a href="mailto:marius@mariusorvik.com">marius@mariusorvik.com</a></p>
    </div>

    <div class="contact-card">
      <div class="contact-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
      </div>
      <h3>LinkedIn</h3>
      <p><a href="https://www.linkedin.com/in/mariusorvik" target="_blank" rel="noopener noreferrer">linkedin.com/in/mariusorvik</a></p>
    </div>

    <div class="contact-card">
      <div class="contact-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </div>
      <h3>Location</h3>
      <p>Porsgrunn, Greater Oslo Area<br/> Norway</p>
    </div>
  </section>

  <style>
    .page-header {
      margin-top: 3rem;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid var(--color-border);
    }

    .page-header h1 {
      margin-bottom: 0.5rem;
    }

    .subtitle {
      font-size: 1.25rem;
      color: var(--color-text-light);
      margin: 0;
    }

    .contact-intro {
      margin-bottom: 4rem;
    }

    .intro-content {
      padding: 2.5rem;
      background: linear-gradient(135deg, rgba(37, 99, 235, 0.03), rgba(139, 92, 246, 0.03));
      border-radius: var(--border-radius);
      border-left: 4px solid var(--color-accent);
    }

    .intro-content .lead {
      font-size: 1.2rem;
      font-weight: 500;
      line-height: 1.8;
      margin-bottom: 1.25rem;
      color: var(--color-text-light);
    }

    .intro-content p {
      font-size: 1.1rem;
      line-height: 1.8;
      color: var(--color-text-light);
      margin-bottom: 1rem;
    }

    .intro-content p:last-child {
      margin-bottom: 0;
    }

    .intro-content strong {
      color: var(--color-text);
      font-weight: 600;
    }

    .contact-methods {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .contact-card {
      padding: 2.5rem;
      background: white;
      border-radius: var(--border-radius);
      border: 1px solid var(--color-border);
      box-shadow: var(--shadow-sm);
      text-align: center;
      transition: all 0.3s var(--ease-out-expo);
      position: relative;
      overflow: hidden;
    }

    .contact-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--color-accent), var(--color-purple));
      transform: scaleX(0);
      transition: transform 0.3s var(--ease-out-expo);
    }

    .contact-card:hover {
      transform: translateY(-8px) rotate(-0.5deg);
      box-shadow: var(--shadow-lg);
      border-color: var(--color-accent);
    }

    .contact-card:hover::before {
      transform: scaleX(1);
    }

    .contact-icon {
      color: var(--color-accent);
      margin-bottom: 1.5rem;
      display: flex;
      justify-content: center;
      transition: transform 0.3s var(--ease-out-expo);
    }

    .contact-card:hover .contact-icon {
      transform: scale(1.1);
    }

    .contact-card h3 {
      font-size: 1.3rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }

    .contact-card p {
      margin-bottom: 0;
      word-break: break-word;
      font-size: 1rem;
      color: var(--color-text-light);
    }

    .contact-card a {
      color: var(--color-accent);
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .contact-card a:hover {
      color: var(--color-accent-hover);
      text-decoration: underline;
    }

    .availability {
      padding: 3rem;
      background: linear-gradient(135deg,
        rgba(37, 99, 235, 0.05),
        rgba(139, 92, 246, 0.05));
      border-radius: var(--border-radius);
      border: 1px solid var(--color-border);
      position: relative;
    }

    .availability::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background: linear-gradient(180deg, var(--color-accent), var(--color-purple));
      border-radius: var(--border-radius) 0 0 var(--border-radius);
    }

    .availability h2 {
      margin-top: 0;
      margin-bottom: 1.5rem;
      font-size: 1.8rem;
    }

    .availability p {
      font-size: 1.1rem;
      line-height: 1.8;
      margin-bottom: 1.25rem;
      color: var(--color-text-light);
    }

    .availability p:last-child {
      margin-bottom: 0;
    }

    .availability a {
      font-weight: 600;
      color: var(--color-accent);
    }

    @media (max-width: 768px) {
      .contact-methods {
        grid-template-columns: 1fr;
      }

      .intro-content {
        padding: 2rem;
      }

      .contact-card {
        padding: 2rem;
      }

      .availability {
        padding: 2rem;
      }
    }
  </style>
</BaseLayout>
