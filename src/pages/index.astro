  <style>
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.95);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .hero {
      padding: 4rem 0;
      margin-bottom: 1rem;
      position: relative;
    }

    .hero-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: linear-gradient(135deg, var(--color-accent), var(--color-purple));
      color: white;
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border-radius: 6px;
      margin-bottom: 1.5rem;
      animation: slideInUp 0.6s var(--ease-out-expo);
    }

    .hero h1 {
      animation: slideInUp 0.6s var(--ease-out-expo) 0.1s both;
    }

    .tagline {
      font-size: clamp(1.1rem, 2vw, 1.4rem);
      color: var(--color-text-light);
      margin-bottom: 1.5rem;
      font-weight: 500;
      animation: slideInUp 0.6s var(--ease-out-expo) 0.2s both;
    }

    .intro {
      font-size: 1.15rem;
      line-height: 1.8;
      max-width: 800px;
      color: var(--color-text-light);
      margin-bottom: 2.5rem;
      animation: slideInUp 0.6s var(--ease-out-expo) 0.3s both;
    }

    .intro strong {
      color: var(--color-text);
      font-weight: 600;
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .section-number {
      font-family: 'Poppins', sans-serif;
      font-size: 3rem;
      font-weight: 700;
      color: var(--color-border);
      line-height: 1;
    }

    .section-header h2 {
      margin: 0;
    }

    .impact {
      margin-top: 0;
      margin-bottom: 6rem;
    }

    .impact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2.5rem;
    }

    .impact-card {
      padding: 1.75rem;
      background: white;
      border-radius: var(--border-radius);
      border: 1px solid var(--color-border);
      box-shadow: var(--shadow-sm);
      transition: all 0.3s var(--ease-out-expo);
      animation: scaleIn 0.6s var(--ease-out-expo) both;
    }

    .impact-card:hover {
      transform: translateY(-8px) rotate(-0.5deg);
      box-shadow: var(--shadow-lg);
      border-color: var(--color-accent);
    }

    .card-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      display: inline-block;
    }

    .impact-card h3 {
      margin-bottom: 1rem;
      font-size: 1.35rem;
    }

    .impact-card ul {
      margin-left: 0;
      list-style: none;
    }

    .impact-card li {
      padding-left: 1.5rem;
      position: relative;
      margin-bottom: 0.75rem;
      color: var(--color-text-light);
      line-height: 1.6;
    }

    .impact-card li::before {
      content: 'â†’';
      position: absolute;
      left: 0;
      color: var(--color-accent);
      font-weight: bold;
    }

    .impact-card strong {
      color: var(--color-text);
      font-weight: 600;
    }

    .philosophy {
      margin-bottom: 6rem;
      padding: 3rem;
      background: linear-gradient(135deg, rgba(37, 99, 235, 0.03), rgba(139, 92, 246, 0.03));
      border-radius: var(--border-radius);
      border: 1px solid var(--color-border);
    }

    .philosophy-text {
      font-size: 1.15rem;
      line-height: 1.8;
      margin-bottom: 2.5rem;
      max-width: 900px;
    }

    .philosophy-text strong {
      color: var(--color-text);
      font-weight: 600;
    }

    .principles {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .principle {
      padding: 1.5rem;
      background: white;
      border-radius: 8px;
      border-left: 3px solid var(--color-accent);
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .principle strong {
      color: var(--color-text);
      font-size: 1.05rem;
      font-weight: 600;
    }

    .principle span {
      color: var(--color-text-light);
      font-size: 0.95rem;
    }

    .cta {
      margin: 5rem 0;
      text-align: center;
    }

    .cta-content {
      padding: 4rem 2rem;
      background: linear-gradient(135deg, var(--color-accent), var(--color-purple));
      border-radius: var(--border-radius);
      color: white;
      box-shadow: var(--shadow-lg);
    }

    .cta-content h3 {
      color: white;
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .cta-content p {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.15rem;
      margin-bottom: 2rem;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .button, .button-secondary {
      display: inline-block;
      padding: 1rem 2rem;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s var(--ease-out-expo);
      text-decoration: none;
      cursor: pointer;
      position: relative;
    }

    .button {
      background: white;
      color: var(--color-accent);
    }

    .button:hover {
      transform: translateY(-2px) scale(1.02);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
      text-decoration: none;
    }

    .button-secondary {
      background: transparent;
      color: white;
      border: 2px solid white;
    }

    .button-secondary:hover {
      background: white;
      color: var(--color-accent);
      text-decoration: none;
      transform: translateY(-2px) scale(1.02);
    }

    @media (max-width: 768px) {
      .hero {
        padding: 2rem 0;
      }

      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .section-number {
        font-size: 2rem;
      }

      .impact-grid {
        grid-template-columns: 1fr;
      }

      .philosophy {
        padding: 2rem 1.5rem;
      }

      .principles {
        grid-template-columns: 1fr;
      }

      .cta-content {
        padding: 3rem 1.5rem;
      }

      .cta-buttons {
        flex-direction: column;
        align-items: center;
      }

      .button, .button-secondary {
        width: 100%;
        max-width: 300px;
      }
    }
  </style>
</BaseLayout>
